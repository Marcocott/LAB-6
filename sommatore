-- sommatore

LIBRARY ieee;
USE ieee.std_logic_1164.all;
USE ieee.numeric_std.all;

ENTITY sommatore IS
	PORT (X, Y: IN SIGNED (19 DOWNTO 0);
			S: OUT SIGNED (19 DOWNTO 0);
			SUB_ADDn : STD_LOGIC);
END sommatore;

ARCHITECTURE Behavior OF sommatore IS

BEGIN
	PROCESS (SUB_ADDn, X, Y)
		BEGIN 
			IF(SUB_ADDn = '0') THEN
				S <= X + Y;
			ELSE 
				S <= X - Y;
			END IF;
	END PROCESS;
	
END Behavior;
